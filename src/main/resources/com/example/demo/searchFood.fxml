<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.SearchFoodController">
    <children>
        <ImageView fitHeight="500.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@restaurantSearch.jpg" />
            </image>
        </ImageView>
        <MenuButton layoutX="242.0" layoutY="223.0" mnemonicParsing="false" prefHeight="45.0" prefWidth="295.0" text="SEARCH OPTIONS" textAlignment="CENTER">
            <items>
                <MenuItem mnemonicParsing="false" onAction="#searchFoodByName" text="BY NAME" />
                <MenuItem mnemonicParsing="false" onAction="#searchFoodinRestaurantByName" text="BY NAME IN RESTAURANT" />
                <MenuItem mnemonicParsing="false" onAction="#searchFoodByCategory" text="BY CATEGORY" />
                <MenuItem mnemonicParsing="false" onAction="#searchFoodinRestaurantByCategory" text="BY CATEGORY IN RESTAURANT" />
                <MenuItem mnemonicParsing="false" onAction="#searchFoodByPriceRange" text="BY PRICE RANGE" />
            <MenuItem mnemonicParsing="false" onAction="#searchFoodInRestaurantByPriceRange" text="BY PRICE RANGE IN A RESTAURANT" />
            <MenuItem mnemonicParsing="false" onAction="#searchCostliestFood" text="COSTLIEST FOOD ITEMS" />
            </items>
            <font>
                <Font name="Bangla MN" size="17.0" />
            </font>
        </MenuButton>
        <Button layoutX="351.0" layoutY="443.0" mnemonicParsing="false" onAction="#backToSearchPage" prefHeight="38.0" prefWidth="76.0" text="BACK">
            <font>
                <Font name="Bangla MN" size="15.0" />
            </font>
        </Button>
        <Button layoutX="127.0" layoutY="154.0" mnemonicParsing="false" onAction="#TotalFoodItemOnMenu" prefHeight="50.0" prefWidth="500.0" text="Total Food Items On the Menu for Every Restaurant">
            <font>
                <Font name="Bangla MN" size="17.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
