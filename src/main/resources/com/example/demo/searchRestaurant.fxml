<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.SearchRestaurantController">
   <children>
      <ImageView fitHeight="500.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@restaurantSearch.jpg" />
         </image>
      </ImageView>
      <MenuButton layoutX="242.0" layoutY="223.0" mnemonicParsing="false" prefHeight="45.0" prefWidth="295.0" text="SEARCH OPTIONS" textAlignment="CENTER">
        <items>
          <MenuItem mnemonicParsing="false" onAction="#searchRestaurantByName" text="BY NAME" />
          <MenuItem mnemonicParsing="false" onAction="#searchRestaurantByScore" text="BY SCORE" />
            <MenuItem mnemonicParsing="false" onAction="#searchRestaurantByCategory" text="BY CATEGORY" />
            <MenuItem mnemonicParsing="false" onAction="#searchRestaurantByPrice" text="BY PRICE" />
            <MenuItem mnemonicParsing="false" onAction="#searchRestaurantByZipCode" text="BY ZIP CODE" />
        </items>
         <font>
            <Font name="Bangla MN" size="17.0" />
         </font>
      </MenuButton>
      <Button layoutX="351.0" layoutY="443.0" mnemonicParsing="false" onAction="#backToSearchPage" prefHeight="38.0" prefWidth="76.0" text="BACK">
         <font>
            <Font name="Bangla MN" size="15.0" />
         </font>
      </Button>
      <Button layoutX="176.0" layoutY="154.0" mnemonicParsing="false" onAction="#categoryWiseRestaurant" prefHeight="50.0" prefWidth="426.0" text="Different Category Wise List of Restaurants">
         <font>
            <Font name="Bangla MN" size="17.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
